{
    "name": "joomla/ccm-component",
    "description": "Content Creation Management Component for Joomla",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "joomla-projects/jorobo": "^0.10.0"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\Component\\CCM\\": "src/administrator/components/com_ccm/src/",
            "Joomla\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "8.1.0"
        }
    },
    "scripts": {
        "build": "vendor/bin/robo build",
        "map": "vendor/bin/robo map",
        "headers": "vendor/bin/robo headers",
        "bump": "vendor/bin/robo bump"
    }
}
